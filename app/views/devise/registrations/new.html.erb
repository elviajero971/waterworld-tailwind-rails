<section class="min-h-screen flex flex-col">
  <div class="flex flex-1 items-center justify-center">
    <div class="rounded-lg sm:border-2 px-4 lg:px-24 py-16 lg:max-w-xl sm:max-w-md w-full text-center">
      <div class="text-center">
        <h1 class="font-bold tracking-wider text-3xl mb-8 w-full text-gray-600">
          <%= t('.title') %>
        </h1>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field py-2 text-left">
            <%= f.text_field :firstname, autofocus: true, placeholder: t('.form.first_name.label'), class: "bg-gray-200 border-2 border-gray-100 focus:outline-none bg-gray-100 block w-full py-2 px-4 rounded-lg focus:border-gray-700"%>
          </div>

          <div class="field py-2 text-left">
            <%= f.text_field :lastname, autofocus: true, placeholder: t('.form.last_name.label'), class: "bg-gray-200 border-2 border-gray-100 focus:outline-none bg-gray-100 block w-full py-2 px-4 rounded-lg focus:border-gray-700"%>
          </div>
          <div class="field py-2 text-left">
            <%= f.email_field :email, autofocus: true, placeholder: t('.form.email.label'), class: "bg-gray-200 border-2 border-gray-100 focus:outline-none bg-gray-100 block w-full py-2 px-4 rounded-lg focus:border-gray-700"%>
          </div>

          <div class="field py-2 text-left">
            <% if @minimum_password_length %>
              <em>(<%= t('.form.password.hint', minimum_password_length: @minimum_password_length) %></em>
            <% end %><br />
            <%= f.password_field :password, placeholder: t('.form.password.label'), class:"bg-gray-200 border-2 border-gray-100 focus:outline-none bg-gray-100 block w-full py-2 px-4 rounded-lg focus:border-gray-700" %>
          </div>

          <div class="field py-2 text-left">
            <%= f.password_field :password_confirmation, placeholder: t('.form.password_confirmation.label'), class: "bg-gray-200 border-2 border-gray-100 focus:outline-none bg-gray-100 block w-full py-2 px-4 rounded-lg focus:border-gray-700" %>
          </div>

          <div class="field py-2 text-left flex">
            <%= f.label t('.form.language.label') %>
            <%= f.select :language, options_for_enum(resource, :language), class: "bg-gray-200 border-2 border-gray-100 focus:outline-none bg-gray-100 block w-full py-2 px-4 rounded-lg focus:border-gray-700" %>
          </div>

          <div class="actions">
            <%= f.submit t('.form.submit.button'), class: "border-2 border-gray-100 focus:outline-none bg-purple-600 text-white font-bold tracking-wider block w-full p-2 rounded-lg focus:border-gray-700 hover:bg-purple-700" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>